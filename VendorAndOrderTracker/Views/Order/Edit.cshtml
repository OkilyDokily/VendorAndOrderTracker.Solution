@{
  Layout = "_Layout";
}


<h3>Edit an order</h3>

<form action=@("/Vendor/" + ViewContext.RouteData.Values["id"] + "/Order/" + ViewContext.RouteData.Values["num"] + "/update") method="post">
  <label for="title">Title</label>
  <input type="text" id="title" name="title" value=@Model.Title>
  <label for="description">Description</label>
  <input type="text" name="description" id="description" value=@Model.Description>
  <label for="price">Price</label>
  <input type="number" step="0.01" name="price" id="price" value=@Model.Price>
  <button type="submit">Update</button>
</form>